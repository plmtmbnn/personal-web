{
	"$schema": "https://json.schemastore.org/tsconfig",
	"compilerOptions": {
		/* Basic Options */
		"target": "ES2020", // Compatible with Node 20 and modern browsers
		"module": "ESNext", // Let Vite handle module bundling
		"lib": ["DOM", "ES2020", "DOM.Iterable"],

		/* JSX & Module Resolution */
		"jsx": "react-jsx", // Use 'react-jsx' for React 17+ (or 'preserve' for others)
		"moduleResolution": "bundler", // Optimized for Vite
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"isolatedModules": true,

		/* Strictness */
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noImplicitAny": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,

		/* Paths & Output */
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"]
		},
		"outDir": "dist",
		"ignoreDeprecations": "6.0",

		/* Emit Settings */
		"skipLibCheck": true, // Skip checking .d.ts files for speed
		"noEmit": true // Vite handles output
	},
	"include": ["src"],
	"exclude": ["node_modules", "dist"]
}
